// Build Configuration for Reminder2Cal
// This file mimics Xcode's build settings configuration

// Product Settings
PRODUCT_NAME = Reminder2Cal
PRODUCT_BUNDLE_IDENTIFIER = com.marcusgrando.Reminder2Cal
PRODUCT_BUNDLE_VERSION = 1.0.0

// Deployment
MACOSX_DEPLOYMENT_TARGET = 14.0
SUPPORTED_PLATFORMS = macosx
VALID_ARCHS = arm64 x86_64

// Swift Compiler
SWIFT_VERSION = 5.9
SWIFT_OPTIMIZATION_LEVEL = -O
SWIFT_COMPILATION_MODE = wholemodule
ENABLE_TESTABILITY = NO

// Code Signing
CODE_SIGN_IDENTITY = Developer ID Application: Marcus Nestor Alves Grando (MY427949GW)
DEVELOPMENT_TEAM = MY427949GW
CODE_SIGN_STYLE = Manual
ENABLE_HARDENED_RUNTIME = YES

// Build Options
ALWAYS_SEARCH_USER_PATHS = NO
CLANG_ENABLE_OBJC_ARC = YES
COPY_PHASE_STRIP = YES
DEBUG_INFORMATION_FORMAT = dwarf-with-dsym
ENABLE_NS_ASSERTIONS = NO
ENABLE_STRICT_OBJC_MSGSEND = YES
GCC_NO_COMMON_BLOCKS = YES
GCC_WARN_64_TO_32_BIT_CONVERSION = YES
GCC_WARN_ABOUT_RETURN_TYPE = YES_ERROR
GCC_WARN_UNDECLARED_SELECTOR = YES
GCC_WARN_UNINITIALIZED_AUTOS = YES_AGGRESSIVE
GCC_WARN_UNUSED_FUNCTION = YES
GCC_WARN_UNUSED_VARIABLE = YES

// Linking
DEAD_CODE_STRIPPING = YES
STRIP_INSTALLED_PRODUCT = YES
STRIP_STYLE = non-global

// Assets
ASSETCATALOG_COMPILER_APPICON_NAME = AppIcon
ASSETCATALOG_COMPILER_GLOBAL_ACCENT_COLOR_NAME = AccentColor

// Info.plist
INFOPLIST_FILE = Info.plist
INFOPLIST_KEY_LSApplicationCategoryType = public.app-category.productivity
INFOPLIST_KEY_NSHumanReadableCopyright = Copyright Â© 2025 Marcus Grando. All rights reserved.
INFOPLIST_KEY_LSUIElement = YES

// Paths
CONFIGURATION_BUILD_DIR = .build/release
BUILT_PRODUCTS_DIR = .build/release
OBJROOT = .build/intermediates
SYMROOT = .build