<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<!-- Hardened Runtime Entitlements -->
	
	<!-- Allow app to use JIT compilation if needed -->
	<key>com.apple.security.cs.allow-jit</key>
	<false/>
	
	<!-- Allow app to load unsigned executable memory -->
	<key>com.apple.security.cs.allow-unsigned-executable-memory</key>
	<false/>
	
	<!-- Allow DYLD environment variables -->
	<key>com.apple.security.cs.allow-dyld-environment-variables</key>
	<false/>
	
	<!-- Disable library validation for development -->
	<key>com.apple.security.cs.disable-library-validation</key>
	<false/>
	
	<!-- Disable executable page protection -->
	<key>com.apple.security.cs.disable-executable-page-protection</key>
	<false/>
	
	<!-- Enable debugging -->
	<key>com.apple.security.get-task-allow</key>
	<false/>
	
	<!-- App Sandbox (optional - enable if you want to distribute via Mac App Store) -->
	<!-- For now, keeping it disabled for flexibility outside App Store -->
	<key>com.apple.security.app-sandbox</key>
	<false/>
	
	<!-- Network Access (if needed in future) -->
	<key>com.apple.security.network.client</key>
	<true/>
	
	<!-- Calendar and Reminders Access -->
	<key>com.apple.security.personal-information.calendars</key>
	<true/>
	
	<key>com.apple.security.personal-information.reminders</key>
	<true/>
</dict>
</plist>